CREATE TABLE users(id INT(10),name VARCHAR(20),m_id INT(10));
CREATE TABLE codekata(user_id INT(10),no_of_psolved INT(10));
CREATE TABLE attendance(user_id INT(10),percentage FLOAT(10));
CREATE TABLE topics(topic_id INT(10),topic_name VARCHAR(20) );
CREATE TABLE tasks(task_id INT(10),task_name VARCHAR(20));
CREATE TABLE company_drives(drive_id INT(10),comp_name VARCHAR(20));
CREATE TABLE mentors(mentor_id INT(10),mentor_name VARCHAR(20));
CREATE TABLE students_activated_courses(student_id INT(10),course_id VARCHAR(10));
CREATE TABLE courses(course_id INT(10),course_name VARCHAR(20));

